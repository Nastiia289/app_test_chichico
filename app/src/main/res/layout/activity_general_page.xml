<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="15dp"
    tools:context=".GeneralPage">
    <LinearLayout
        android:id="@+id/user_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineHeight="32dp"
            android:paddingLeft="10dp"
            android:text="user name"
            android:textColor="@color/light_text"
            android:textFontWeight="500"
            android:textSize="16dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/choose_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_card"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineHeight="32dp"
            android:paddingLeft="10dp"
            android:text="Оберіть ресторан"
            android:textColor="@color/dark_text"
            android:textFontWeight="600"
            android:textSize="25dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_location" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_title"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/myImageView"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:lineHeight="64dp"
                android:paddingLeft="10dp"
                android:text="Chang"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="40dp" />

            <LinearLayout
                android:id="@+id/to_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myImageView"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="20dp"
                android:textAlignment="gravity">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_restaurant_loc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/roboto"
                    android:text="Ярославiв вал, 23а"
                    android:textColor="@color/regular_text"
                    android:textFontWeight="500"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/myImageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/myImageView2"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:lineHeight="64dp"
                android:paddingLeft="10dp"
                android:text="Chang"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myImageView2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="20dp"
                android:textAlignment="gravity">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_restaurant_loc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/roboto"
                    android:text="Ярославiв вал, 23а"
                    android:textColor="@color/regular_text"
                    android:textFontWeight="500"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/myImageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chang" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/myImageView3"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Chang"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="40dp"
                android:textFontWeight="600"
                android:lineHeight="64dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myImageView3"
                android:padding="10dp"
                android:paddingBottom="20dp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_restaurant_loc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Ярославiв вал, 23а"
                    android:fontFamily="@font/roboto"
                    android:textSize="20dp"
                    android:textFontWeight="500"
                    android:textColor="@color/regular_text"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>