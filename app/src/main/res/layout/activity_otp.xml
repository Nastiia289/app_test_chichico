<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test.registration.otp_activity.OTPActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:paddingBottom="25dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="130dp"
                android:layout_height="128dp"
                android:src="@drawable/logo"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineHeight="38px"
            android:textSize="24dp"
            android:textFontWeight="500"
            android:textColor="@color/regular_text"
            android:text="Введіть SMS  код"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/write_number"
            android:layout_marginTop="30dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/hint_color"
                android:hint=" "
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#E0E0E0"
                app:endIconMode="clear_text"
                app:endIconTint="@color/hint_color"
                app:hintTextColor="@color/hint_color"
                app:placeholderTextColor="@color/hint_color"
                app:prefixTextColor="@color/regular_text"
                app:startIconDrawable="@drawable/ic_lock"
                >
                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/login_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textAlignment="center"
                    android:hint="000000"
                    android:inputType="phone"
                    app:keep_hint="true"
                    app:mask="#-#-#-#-#-#"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/resend_otp_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto"
            android:text="Не приходить СМС ?"
            android:textColor="@color/regular_text"
            android:textAlignment="center"
            android:textFontWeight="400"
            android:textSize="14sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_sms_code_next_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#FFCB41"
        android:fontFamily="@font/roboto"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:lineHeight="27sp"
        android:radius="0dp"
        android:shadowRadius="@null"
        android:text="Далі"
        android:textColor="#363636"
        android:textFontWeight="500"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

</RelativeLayout>